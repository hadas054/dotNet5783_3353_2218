<Window x:Class="PL.manager.mainProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.manager"
        mc:Ignorable="d"
        Title="mainProduct" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="500"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ComboBox Name="selection" SelectionChanged="select" HorizontalAlignment="Center" Margin="0,9,0,0" VerticalAlignment="Top" Width="120"/>
        <ListView x:Name="List" Grid.Row="1" MouseDoubleClick="UpdateProduct"/>
        <Button Content="הוספת מוצר" Click="AddProduct" HorizontalAlignment="Left" Margin="737,341,0,0" Grid.Row="1" VerticalAlignment="Top"/>
    </Grid>
</Window>
